#!/bin/sh

echo "################################################################################"
echo "#                              cytopia/file-lint                               #"
echo "#                                 (awesome-ci)                                 #"
echo "################################################################################"
echo "#                                                                              #"
echo "#                                                                              #"
echo "# Usage:                                                                       #"
echo "# -----------------------------------------------------------------------------#"
echo "# docker run --rm cytopia/file-lint --help                                     #"
echo "# docker run --rm cytopia/file-lint <tool> --help                              #"
echo "# docker run --rm cytopia/file-lint <tool> --info                              #"
echo "# docker run --rm cytopia/file-lint <tool> --version                           #"
echo "#                                                                              #"
echo "#                                                                              #"
echo "# Available tools:                                                             #"
echo "# -----------------------------------------------------------------------------#"
echo "# file-empty                    Scans if files are empty                       #"
echo "# file-cr                       Scans if files contain carriage returns (\\r)   #"
echo "# file-crlf                     Scans if files contain win line feeds (\\r\\n)   #"
echo "# file-nullbyte                 Scans if files contain nullbyte chars (\\x00)   #"
echo "# file-trailing-newline         Scans if files contain trailing newline(s)     #"
echo "# file-trailing-single-newline  Scans if files contain single trailing newline #"
echo "# file-trailing-space           Scans if files contain trailing whitespace     #"
echo "# file-utf8                     Scans if files are utf8 encoded                #"
echo "# file-utf8-bom                 Scans if files contain byte order mark         #"
echo "#                                                                              #"
echo "#                                                                              #"
echo "# Example:                                                                     #"
echo "# -----------------------------------------------------------------------------#"
echo "# docker run --rm -v \$(pwd):/data cytopia/file-lint \\                          #"
echo "#     lf-crlf --ignore \".git/,.github/\" --path .                               #"
echo "#                                                                              #"
echo "################################################################################"
echo
